<% if admin_signed_in? %>
    <div class="frame1">
      <h1> Edit User Profile </h1>

      <%= form_for @user, url: home_path(@user), html: { method: :put } do |f| %>
          <%= f.label :Email  %><br />
          <%= f.text_field :email %>
          <br/>
          <%= f.label :First_Name  %><br />
          <%= f.text_field :FirstName %>
          <br/>
          <%= f.label :Last_Name  %><br />
          <%= f.text_field :LastName %>
          <br/>
          <%= f.label :Phone  %><br />
          <%= f.text_field :Phone %>
          <br/>
          <%= f.label :Date_Of_Birth  %><br />
          <%= f.text_field :DateOfBirth %>
          <br/>


          <%= f.submit "Save changes", class:"btn btn-success"%>
          <br/>
          <br/>
          <%= link_to 'Back to Main Page', "/home/admin", class:"btn btn-info"%>
      <% end %>
    </div>

<% else %>
    <p>You are not signed in.</p>
    <%= link_to 'Login', new_admin_session_path %>
<% end %>